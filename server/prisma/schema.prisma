generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int           @id @default(autoincrement())
  name             String
  email            String        @unique
  password         String
  username         String        @unique
  resetToken       String? // Token for resetting the password
  resetTokenExpiry DateTime? // Expiration time for the token
  Subscription     Subscription?
}

model Course {
  id             Int           @id @default(autoincrement())
  title          String
  description    String
  price          Float
  offPrice       Float         @map("off_price")
  demoVideoUrl   String        @map("demo_video_link")
  courseVideoUrl String        @map("course_video_link")
  thumbnailUrl   String        @map("thumbnail_url")
  fileName       String
  isPublished    Boolean       @default(true)
  Subscription   Subscription?
}

enum SubscriptionPlanDuration {
  WEEKLY
  MONTHLY
  YEARLY
}

model Subscription {
  id           Int                      @id @default(autoincrement())
  userId       Int                      @unique
  user         User                     @relation(fields: [userId], references: [id])
  courseId     Int                      @unique
  course       Course                   @relation(fields: [courseId], references: [id])
  price        Float
  purchaseDate DateTime
  startDate    DateTime
  endDate      DateTime?
  planDuration SubscriptionPlanDuration
}
